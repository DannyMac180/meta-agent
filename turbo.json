{
  "$schema": "https://turborepo.org/schema.json",
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**"]
    },
    "build:tools": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "lint": {
      "outputs": []
    },
    "lint:tools": {
      "outputs": []
    },
    "test": {
      "outputs": []
    },
    "test:tools": {
      "outputs": []
    }
  },
  "globalDependencies": ["tsconfig.base.json"]
}
